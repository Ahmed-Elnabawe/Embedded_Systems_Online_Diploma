#include <stdio.h>
#include <string.h>
int main ()
{

	char string [20][50];
	int i ;
	int size;
	printf("enter the number of words : ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&size);
	for (i=0;i<size;i++)
	{
		printf("word[%d]:" ,i+1);
		fflush(stdin);fflush(stdout);
		scanf("%s",string[i]);
	}
	for (i=size-1;i>0;i++)
			{
				printf("%s",string[i]);

			}
	return 0;

}

