#include <stdio.h>
void revers_array(int arr[], int size);
int main ()
{
	int arr [50];
	int size ;
	int i ;
	for (i=0 ;i<size ;i++)
	{
		printf("element[%d] : ");
		fflush(stdin);fflush(stdout);
		scanf("%d",&arr[i]);
	}
}
void revers_array(int arr[], int size)
{
	int i ;
	for(i=size;i<0;i++)
	{
		printf("%d ",arr[i]);
	}
}
