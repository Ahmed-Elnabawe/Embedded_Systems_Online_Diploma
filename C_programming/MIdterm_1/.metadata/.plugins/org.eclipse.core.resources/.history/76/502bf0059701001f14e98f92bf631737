#include <stdio.h>
void revers_array(int arr[], int size);
int main ()
{
	int arr [50];
	int size ;
	int i ;
	printf("enter the size of array :");
	fflush(stdin);fflush(stdout);
	scanf("%d",&size);
	for (i=0 ;i<size ;i++)
	{
		printf("element[%d] : ",i+1);
		fflush(stdin);fflush(stdout);
		scanf("%d",&arr[i]);
	}
	revers_array(arr,size);
}
void revers_array(int arr[], int size)
{
	int i ;
	for(i=size-1;i>=0;i--)
	{
		printf("%d ",arr[i]);
	}
}
